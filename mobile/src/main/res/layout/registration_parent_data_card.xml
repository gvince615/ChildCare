<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentDataCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/colorYellowDark"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="5dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="5dp"
      android:theme="@style/ParentCardTheme"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:gravity="start|center"
          android:paddingStart="10dp"
          android:text="Parent Information"
          android:textColor="@color/darker_grey"
          android:textSize="22sp"
          android:textStyle="bold"
          />

      <ImageButton
          android:id="@+id/delete_parent_card_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@android:color/transparent"
          android:foreground="?android:attr/selectableItemBackground"
          android:padding="3dp"
          android:src="@android:drawable/ic_menu_close_clear_cancel"

          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorYellow"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="2"
        >


      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="2"
          android:orientation="vertical"
          android:padding="10dp"
          >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_first_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="First Name"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_last_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Last Name"
              />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_layout_address_ln_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_address_ln_1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Address Line 1"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_layout_address_ln_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_address_ln_2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Address Line 2"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_city"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="City"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_layout_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_state"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="State"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_layout_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <EditText
              android:id="@+id/input_zip"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Zip Code"
              />

        </android.support.design.widget.TextInputLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>

