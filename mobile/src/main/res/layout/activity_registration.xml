<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.RegistrationActivity"
    >

  <LinearLayout
      android:id="@+id/registration_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="5dp"
      android:background="@color/colorRed"
      android:orientation="vertical"
      android:padding="5dp"
      android:transitionName="simple_activity_transition"
      >
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="5dp"
        >

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/registration_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>

      </ScrollView>

    </LinearLayout>
  </LinearLayout>

  <com.github.clans.fab.FloatingActionMenu
      android:id="@+id/menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      fab:layout_constraintBottom_toBottomOf="parent"
      fab:layout_constraintEnd_toEndOf="parent"
      fab:menu_animationDelayPerItem="50"
      fab:menu_backgroundColor="@color/lighter_grey"
      fab:menu_buttonSpacing="0dp"
      fab:menu_colorNormal="@color/colorRedAccent"
      fab:menu_fab_label="Available Data Cards"
      fab:menu_fab_size="normal"
      fab:menu_icon="@drawable/fab_add"
      fab:menu_labels_colorNormal="#000000"
      >

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/child_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_child_white_48x48"
        fab:fab_colorNormal="@color/colorBlue"
        fab:fab_label="Add Child Data Card"
        fab:fab_size="mini"
        />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/parent_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_circle_white_48x48"
        fab:fab_colorNormal="@color/colorYellow"
        fab:fab_label="Add Parent/Guardian Data Card"
        fab:fab_size="mini"
        />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/medical_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_local_hospital_white_18dp"
        fab:fab_colorNormal="@color/colorPurple"
        fab:fab_label="Add Medical Data Card"
        fab:fab_size="mini"
        />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/billing_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_attach_money_white_18dp"
        fab:fab_colorNormal="@color/colorGreen"
        fab:fab_label="Add Billing Data Card"
        fab:fab_size="mini"
        />

  </com.github.clans.fab.FloatingActionMenu>

</android.support.constraint.ConstraintLayout>